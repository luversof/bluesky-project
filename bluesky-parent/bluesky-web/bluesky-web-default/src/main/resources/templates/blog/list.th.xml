<?xml version="1.0"?>
<thlogic>
	<attr sel="#test/tbody" th:remove="all-but-first">
		<attr sel="tr" th:each="blogArticle : ${blogArticlePage.getContent()}">
			<attr sel="td[0]" th:text="${blogArticle.id}" />
			<attr sel="td[1]" th:text="${blogArticle.category} ? ${blogArticle.category.name}" />
			<attr sel="td[2]">
				<attr sel="a" th:href="#{url.blog.view.view(${blogArticle.blog.id}, ${blogArticle.id})}" th:text="${blogArticle.title}" />
			</attr>
			<attr sel="td[3]" th:text="${blogArticle.createdDate == null ? '' : #temporals.format(blogArticle.createdDate, 'yyyy-MM-dd')}" />
			<attr sel="td[4]" th:text="${blogArticle.viewCount}" />
    	</attr>
	</attr>
	<attr sel="#test2/tbody" th:remove="all-but-first" th:if="${!blogArticlePage.hasContent()}">
    	<attr sel="tr">
    		<attr sel="td[0]" th:attrappend="colspan=5" th:text="#{blogArticle.message.empty.content}" />
    	</attr>
	</attr>
</thlogic>